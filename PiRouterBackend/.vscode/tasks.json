{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/PiRouterBackend.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/PiRouterBackend.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/PiRouterBackend.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "docker-build",
            "type": "docker-build",
            "dockerBuild": {
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "isBackground": true
        },
        {
            "label": "docker-run-debug",
            "type": "docker-run",
            "dockerRun": {
                "image": "pirouter-backend-csharp:latest",
                "ports": [
                    {
                        "containerPort": 51508,
                        "hostPort": 51508
                    }
                ],
                "volumes": [
                    {
                        "containerPath": "/app/config",
                        "hostPath": "${workspaceFolder}/config",
                        "permissions": "rw"
                    }
                ],
                "removeContainerAfterDebug": true,
                "interactive": true,
                "containerName": "pirouter-csharp-debug"
            },
            "preLaunchTask": "docker-build"
        }
    ]
}
